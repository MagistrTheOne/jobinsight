# GigaChat API Configuration
GIGACHAT_CLIENT_ID=your-client-id-here
GIGACHAT_CLIENT_SECRET=your-client-secret-here
GIGACHAT_AUTHORIZATION_KEY=your-authorization-key-here

# GigaChat API Endpoints
GIGACHAT_OAUTH_URL=https://ngw.devices.sberbank.ru:9443/api/v2/oauth
GIGACHAT_API_URL=https://gigachat.devices.sberbank.ru/api/v1
GIGACHAT_SCOPE=GIGACHAT_API_PERS

# GigaChat Certificate Configuration
# Сертификат Минцифры автоматически подхватывается из certs/russian_trusted_root_ca_pem.crt
# Или укажите кастомный путь:
# GIGACHAT_CA_BUNDLE_PATH=./certs/russian_trusted_root_ca_pem.crt
# Для разработки без сертификата (небезопасно, только для dev!):
# GIGACHAT_INSECURE=true

# Application Configuration
NEXTAUTH_SECRET=your-nextauth-secret-here
NEXTAUTH_URL=http://localhost:3000
