# GigaChat API Configuration
GIGACHAT_CLIENT_ID=your-client-id-here
GIGACHAT_CLIENT_SECRET=your-client-secret-here
GIGACHAT_AUTHORIZATION_KEY=your-authorization-key-here

# GigaChat API Endpoints
GIGACHAT_OAUTH_URL=https://ngw.devices.sberbank.ru:9443/api/v2/oauth
GIGACHAT_API_URL=https://gigachat.devices.sberbank.ru/api/v1
GIGACHAT_SCOPE=GIGACHAT_API_PERS

# GigaChat Certificate Configuration
# Сертификат Минцифры автоматически подхватывается из certs/russian_trusted_root_ca_pem.crt
# Или укажите кастомный путь:
# GIGACHAT_CA_BUNDLE_PATH=./certs/russian_trusted_root_ca_pem.crt
# Для разработки без сертификата (небезопасно, только для dev!):
# GIGACHAT_INSECURE=true

# Application Configuration
BETTER_AUTH_SECRET=your-better-auth-secret-here
BETTER_AUTH_URL=http://localhost:3000
NEXT_PUBLIC_BETTER_AUTH_URL=http://localhost:3000
NEXTAUTH_URL=http://localhost:3000

# OAuth Providers
# GitHub OAuth (optional)
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# Google OAuth (optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Neon PostgreSQL Database
# Get your connection string from: https://console.neon.tech
DATABASE_URL=postgresql://<user>:<password>@<endpoint_hostname>.neon.tech:<port>/<dbname>?sslmode=require

# Polar Payment Integration
# Get your access token from: https://polar.sh/dashboard/settings/tokens
POLAR_ACCESS_TOKEN=polar_oat_xxxxx
POLAR_PRODUCT_ID=xxxxx-xxxxx-xxxxx-xxxxx
POLAR_SUCCESS_URL=http://localhost:3000/checkout/success?checkout_id={CHECKOUT_ID}

# Public Polar Product ID (used in client-side code)
NEXT_PUBLIC_POLAR_PRODUCT_ID=xxxxx-xxxxx-xxxxx-xxxxx
